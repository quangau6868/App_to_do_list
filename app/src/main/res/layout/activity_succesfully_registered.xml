<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="Thanh di chuyển"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".activity.SuccesfullyRegisteredActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/forgot_myImageButton1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:background="@drawable/rounded2"
            android:contentDescription="Nút trở lại"
            android:src="@drawable/baseline_arrow_back_ios_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Successfully Registered"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginTop="70dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Congratulations, your account"
            android:layout_gravity="center"
            android:textColor="@color/gray"
            android:textSize="20sp"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="isalready registered in this application"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/bntBack"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="@color/orange"
            android:background="@drawable/rounded1"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:padding="20dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="60dp"/>

    </LinearLayout>

</ScrollView>