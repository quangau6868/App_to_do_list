<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="Thanh di chuyển"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".activity.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/forgot_myImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:background="@drawable/rounded2"
            android:contentDescription="Nút trở lại"
            android:src="@drawable/baseline_arrow_back_ios_24"/>

        <TextView
            android:id="@+id/forgot_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/forgot_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Type your email, we will send you"
            android:layout_gravity="center"
            android:textColor="@color/gray"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/forgot_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="vervication caode via email"
            android:layout_gravity="center"
            android:textColor="@color/gray"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/forgot_Email"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_edittext_background"
            android:drawableStart="@drawable/baseline_email_24"
            android:drawablePadding="10dp"
            android:hint="Michael@gmail.com"
            android:padding="15dp" />

        <Button
            android:id="@+id/forgot_btnConfirm"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:backgroundTint="@color/orange"
            android:background="@drawable/rounded1"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:padding="20dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"/>

    </LinearLayout>

</ScrollView>