<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="Thanh di chuyển"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".activity.ResetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/Reset_myImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:paddingStart="10dp"
            android:background="@drawable/rounded2"
            android:contentDescription="Nút trở lại"
            android:src="@drawable/baseline_arrow_back_ios_24"/>

        <TextView
            android:id="@+id/Reset_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/Reset_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Create your new password to Login"
            android:layout_gravity="center"
            android:textColor="@color/gray"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Reset_3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Email"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="10dp"
            android:paddingStart="15dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Reset_new_password"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext_background"
            android:drawableStart="@drawable/baseline_lock_24"
            android:drawablePadding="10dp"
            android:hint="**********"
            android:inputType="textPassword"
            android:padding="15dp" />

        <EditText
            android:id="@+id/Reset_confirm_password"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext_background"
            android:drawableStart="@drawable/baseline_lock_24"
            android:drawablePadding="10dp"
            android:hint="**********"
            android:inputType="textPassword"
            android:padding="15dp" />

        <Button
            android:id="@+id/Reset_btnConfirm"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:backgroundTint="@color/orange"
            android:background="@drawable/rounded1"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:padding="20dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"/>

    </LinearLayout>

</ScrollView>